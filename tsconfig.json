{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "noEmitOnError": false,
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2019",
    "baseUrl": "src",
    "paths": {
      "rules/*": ["rules/*"],
      "services/*": ["services/*"],
      "models/*": ["models/*"],
      "helpers/*": ["helpers/*"]
    }
  },
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts"]
}

  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "test": "jest test",
    "test:watch": "jest test --watch",
    "start": "ts-node --esm .\\server\\index.ts"

    "eslint-config-vtex": "^12.9.3",
    "husky": "^4.3.6",
    "jest": "^29.5.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@vtex/api": "^6.45.15",
    "package.json": "^2.0.1",
    "zod": "^3.21.4"
